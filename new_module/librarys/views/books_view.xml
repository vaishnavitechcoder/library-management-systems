<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_library_books_list" model="ir.ui.view">
        <field name="name">library.books.list.view</field>
        <field name="model">library.books</field>
        <field name="arch" type="xml">
            <list string="books List">
                <field name="book_id"/>
                <field name="name"/>
                <field name="author_ids" widget="many2many_tags"/>
                <field name="isbn"/>
                <field name="category_id"/>
                <field name="publisher"/>
                <field name="publish_date"/>
                <field name="num_pages"/>
                <field name="language" widget="badge"/>
                <field name="state" widget="badge"/>
                <field name="price"/>
                <field name="image"/>
                <field name="description"/>
                <field name="location"/>
                <field name="quantity"/>
                <field name="available_copies"/>
                <field name="borrow_ids"/>
                <field name="code"/>
                <field name="borrowed_count"/>
            </list>
        </field>
    </record>
    
    <record id="view_library_books_form" model="ir.ui.view">
        <field name="name">library.books.form.view</field>
        <field name="model">library.books</field>
        <field name="arch" type="xml">
            <form string="books Form">            
                <sheet>
                    <div class="oe_button_box" name="button_box" >
                        <button name="%(action_library_borrow)d" 
                                type="action" 
                                string="borrow List" 
                                class="oe_start_button"/>
                    </div>
                    <group>
                        <field name="book_id"/>
                        <field name="name"/>
                        <field name="author_ids" widget="many2many_tags"/>
                        <field name="isbn"/>
                        <field name="category_id"/>
                        <field name="publisher"/>
                        <field name="publish_date"/>
                        <field name="num_pages"/>
                        <field name="language" widget="badge"/>
                        <field name="state" widget="badge"/>
                        <field name="price"/>
                        <field name="description"/>
                        <field name="location"/>
                        <field name="quantity"/>
                        <field name="available_copies"/>
                        <field name="borrow_ids"/>
                        <field name="code"/>
                        <field name="borrowed_count"/>
                    </group>
                    <group>
                        <field name="image" widget = "Image" class="oe_avatar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_library_books_kanban" model="ir.ui.view">
        <field name="name">library.books.kanban.view</field>
        <field name="model">library.books</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_view">
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_image">
                                <field name="image" widget="image" class="oe_kanban_avatar" style="max-height: 150px;"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <span><strong>Author:</strong> <field name="author_ids" widget="many2many_tags"/></span>
                                </div>
                                <div>
                                    <span><strong>Category:</strong> <field name="category_id"/></span>
                                </div>
                                <div>
                                    <span><strong>ISBN:</strong> <field name="isbn"/></span>
                                </div>
                                <div>
                                    <span><strong>Price:</strong> <field name="price"/></span>
                                </div>
                                <div>
                                    <span><strong>Language:</strong> <field name="language" widget="badge"/></span>
                                </div>
                                <div>
                                    <span><strong>State:</strong> <field name="state" widget="badge"/></span>
                                </div>
                                <div>
                                    <span><strong>Available:</strong> <field name="available_copies"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

   
    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">library.books.search.view</field>
        <field name="model">library.books</field>
        <field name="arch" type="xml">
            <search>
                <field name="book_id"/>
                <field name="name"/>
                <field name="author_ids"/>
                <field name="isbn"/>
                <field name="category_id"/>
                <field name="publisher"/>
                <field name="language"/>
                <field name="price"/>

                <filter string="Price Above 100" name="filter_price_high" domain="[('price', '>', 100)]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_by_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Publisher" name="group_by_publisher" context="{'group_by': 'publisher'}"/>
                    <filter string="Author" name="group_by_author" context="{'group_by': 'author_ids'}"/>
                    <filter string="Language" name="group_by_language" context="{'group_by': 'language'}"/>
                </group>
            </search>   
        </field>
    </record>  

            
    <record id="action_library_books" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.books</field>
        <field name="view_mode">list,form,kanban,search</field>
    </record>


    <menuitem id="menu_library_root"
              name="library management system"
              sequence="10"
    />
    
    <menuitem id="collection_views"
              name="Collection"
              parent="menu_library_root"
              action="action_library_books"
    />

    <menuitem id="books_views"
              name="Books"
              parent="collection_views"
              action="action_library_books"/>
</odoo>