<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_low_stoc_wizard" model="ir.ui.view">
        <field name="name">low.stock.wizard.form</field>
        <field name="model">inventory.stock</field>
        <field name="arch" type="xml">
            <form string="stock wizard">
                <field name="threshold"/>
                <footer>
                    <button string="less quantity" type="object" name="quantity_threshold" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_low_wizard" model="ir.actions.act_window">
        <field name="name">Low quantity</field>
        <field name="res_model">inventory.stock</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="low_stock"
              name="Low Stock Quantity"
              parent="stock.menu_warehouse_report"
              action="action_low_wizard"/>

</odoo>